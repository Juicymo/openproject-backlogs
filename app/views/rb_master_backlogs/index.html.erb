<% content_for :header_tags do %>
<%= render :partial => 'shared/backlogs_header' %>
  <%= stylesheet_link_tag 'backlogs/master_backlog.css' %>
  <%= javascript_include_tag url_for(:controller => '/rb_server_variables',
                                     :action => 'show',
                                     :project_id => @project) %>
<% end %>

<ul class="action_menu_main legacy-actions-main">
  <li><em>Legend </em></li>
<% available_story_types.each do |type| %>
  <li><%= type_icon(type.id, 0) %> <%= type.name %></li>
<% end %>
</ul>

<div class='contextual'></div>
<%= toolbar title: "<i class=\"fa fa-tachometer\"></i> #{l(:label_backlogs_overview)}" do %>
  <% current_backlog = @sprint_backlogs.first %>
  <% if current_backlog.present? %>
  <li class="toolbar-item">
    <%= link_to({
                  :controller => '/rb_taskboards',
                  :action => 'show',
                  :project_id => @project,
                  :sprint_id => current_backlog.sprint
                },
                :title => l('backlogs.current_spring_taskboard_hint'),
                :class => 'button -alt-highlight'
                ) do
    %>
      <i class="fa fa-thumb-tack"></i> <%= l('backlogs.current_spring_taskboard') %>
    <% end %>
  </li>
  <% end %>
    <li class="toolbar-item">
      <%= link_to(new_project_version_path(@project),
                  :title => l('backlogs.new_sprint_hint'),
                  :class => 'button'
          ) do
      %>
          <i class="fa fa-plus"></i> <%= l('backlogs.new_sprint') %>
      <% end %>
    </li>
    <li class="toolbar-item">
      <%= link_to('#',
                  :title => l('backlogs.initial_setup_hint'),
                  :class => 'button disabled'
          ) do
      %>
          <i class="fa fa-cogs"></i> <%= l('backlogs.initial_setup') %>
      <% end %>
    </li>
<% end %>

<div id="rb">
  <div id="backlogs_container" class="clearfix">
    <div id="owner_backlogs_container">
      <%= render :partial => 'backlog', :collection => @owner_backlogs %>
    </div>
    <div id="sprint_backlogs_container">
      <%= render :partial => 'backlog', :collection => @sprint_backlogs %>
      <% if @closed_sprint_backlogs.any? %>
      <h3>Closed Sprints</h3>
      <%= render :partial => 'backlog', :collection => @closed_sprint_backlogs %>
      <% end %>
    </div>
  </div>

  <div id="helpers">
    <%= render :partial => "rb_stories/helpers" %>
    <div id="last_updated"><%= date_string_with_milliseconds(@last_update, 0.001) %></div>
  </div>
</div>
<%
  #include calendar js files in case they are needed for edit
  include_calendar_headers_tags
-%>
